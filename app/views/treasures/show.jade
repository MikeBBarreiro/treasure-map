extends ../shared/template
block content
  .row
    .col-xs-6
      #map
    .col-xs-6
      .row
        .col-xs-12
          #treasures(data-name=treasure.name, data-lat=treasure.lat, data-lng=treasure.lng)
            .page-header: h1= treasure.name
            table.table
              th Name
              th Location
              th difficulty
              tr
                td= treasure.name
                td= treasure.Location
                td= treasure.difficulty
          .row
            .col-xs-12
              form(method='post', action='/treasures/#{treasure._id}/found')
                button.foundIt Got It!
  .row
    .col-xs-6
      .hintDiv
        h3 Hint
        p= treasure.hint
    .col-xs-6

block scripts
  script(src='/js/user/show.js')
